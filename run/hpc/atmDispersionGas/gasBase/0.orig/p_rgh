FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include        "$FOAM_CASE/data/ablParams"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $pressure;

boundaryField
{
  vapourInlet
  {
      type            fixedFluxPressure;
      value           uniform 0;
  } 
    frontField
    {
        type            zeroGradient;
    }
    backField
    {
        type            zeroGradient;
    }
    sideField
    {
        type            zeroGradient;
    }
    top
    {
        type            prghPressure;
        rho             rho;
        p               uniform $pressure;
        value           uniform $pressure; // optional initial value
    }
    ground
    {
         type            zeroGradient;

    }
    symPlane
    {
        type            symmetryPlane;
    }
}
