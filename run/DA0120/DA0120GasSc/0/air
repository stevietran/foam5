FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      air;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1;

boundaryField
{
    frontField
    {
        type            fixedValue;
        value           uniform 1;
    }
    backField
    {
        type            zeroGradient;
    }
    symPlane
    {
        type            symmetryPlane;
    }
    sideField
    {
        type            zeroGradient;
    }
    ground
    {
        type            zeroGradient;
    }
    top
    {
        type            zeroGradient;
    }
    vapourInlet
    {
        type            fixedValue;
        value           uniform 0;
    }
}


